{
  "name": "daia",
  "version": "0.0.2-SNAPSHOT.0",
  "private": true,
  "workspaces": [
    "libs/*",
    "demo",
    "ui"
  ],
  "devDependencies": {
    "@types/node": "^24.8.1",
    "turbo": "^2.6.0",
    "typescript": "^5.6.3",
    "pnpm": "^10.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "check:cached": "turbo run check:cached",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "publish:proto": "cd libs/proto && pnpm publish",
    "publish:blockchain-bridge": "cd libs/blockchain-bridge && pnpm publish",
    "publish:langchain": "cd libs/langchain && pnpm publish",
    "publish:all": "pnpm run publish:proto && pnpm run publish:blockchain-bridge && pnpm run publish:langchain || exit 1"
  },
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "@parcel/watcher",
      "@swc/core",
      "esbuild",
      "protobufjs"
    ],
    "overrides": {
      "@types/node": "^24.8.1",
      "vite": "^6.4.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "@types/node": "^24.8.1"
      },
      "ignoreMissing": []
    }
  }
}
