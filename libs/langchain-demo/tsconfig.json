{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#src/*": ["src/*"],
      "#types/*": ["types/*"],
      "#tests/*": ["tests/*"],
      "@d4ia/proto": ["../proto/src/index.ts"],
      "@d4ia/langchain": ["../langchain/src/index.ts"]
    }
  },
  "include": ["src", "types"]
}
