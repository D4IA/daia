{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#src/*": ["src/*"],
      "#types/*": ["types/*"],
      "#tests/*": ["tests/*"]
    }
  },
  "include": ["src", "types"]
}
